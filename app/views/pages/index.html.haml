:javascript
  $(document).ready(function() {
    $('#coin-slider').coinslider({  width: 500,
                                    effect: 'straight',
                                    height: 300,
                                    navigation: true,
                                    delay: 5000,
                                    titleSpeed: 700 });
  });

.row
  .span7
    .featured
      .top
      .featureDetails
        %h2 Featured Dayhomes

      #coin-container
        #coin-slider
          #homes
            - @featured_day_homes.each do |featured_day_home|
              %a{:href => day_home_slug_path(featured_day_home.slug)}
                %img{:src=>"#{featured_day_home.photos.first.photo_url(:reg)}"}
                %span
                  %h4
                    = featured_day_home.name
                  - if featured_day_home.blurb.present?
                    %p
                      = featured_day_home.blurb
      .bottom
    
  .span5
    .callToAction
      .top
      %h3 Dayhome owner?
      %p.point
        We believe all children should have the best care possible.
      %p.point
        We believe Dayhomes provide that level of care.
      %p.point
        But, caring for children can be a tough job.
      %p
        Let us make that job a little easier for you.
      %p
        = link_to 'Register!'.html_safe, [:new, :day_home_signup_request], :class => "callToActionButton", :id => "signUp"
      .bottom
      
