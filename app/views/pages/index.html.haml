:javascript
  $(document).ready(function() {
    $('#coin-slider').coinslider({  width: 500,
                                    effect: 'straight',
                                    height: 300,
                                    navigation: true,
                                    delay: 5000,
                                    titleSpeed: 700 });
  });


.row
  .featured.span7
    #featureTop
    #featureDetails
      %h2 Featured Dayhomes

    #coin-container
      #coin-slider
        #homes
          - @featured_day_homes.each do |featured_day_home|
            %a{:href => day_home_slug_path(featured_day_home.slug), :target => "_blank"}
              %img{:src=>"#{featured_day_home.photos.first.photo_url(:reg)}"}
              %span
                %h4
                  = featured_day_home.name
                - if featured_day_home.blurb.present?
                  %p
                    = featured_day_home.blurb
    #featureBtm
    
  .callToAction.span4
    .callToActionTop
    %h3 Dayhome owner?
    %p
      Are you a day home owner? Would you like a fast, easy way for
      parents to find your company, and tools to keep them informed
      once they have found you?
    %p
      Register your day home today for easy access to a whole new
      client base.
    %p
      = link_to 'Sign Up!'.html_safe, [:new, :day_home_signup_request], :id => 'signUp', :class => 'pull-right'
      .callToActionBottom
      
  %p.clear
    :plain
      <div class="fb-like" data-href="http://dayhomeregistry.com" data-send="false" data-layout="box_count" data-width="75" data-show-faces="false"></div>
      
      <g:plusone size="medium"></g:plusone>

      <script type="text/javascript">
        (function() {
          var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
          po.src = 'https://apis.google.com/js/plusone.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
        })();
      </script>
      
