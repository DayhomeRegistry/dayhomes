= form_for(@advanced_search, :url => searches_path, :method => 'get', :html => {:class => 'well'}) do |f|
  %h3 Dayhome Search
  .control-group
    .controls
      = f.label :address, 'Near'
      = f.text_field :address
      = f.label :availability_types, 'Availability'
      - @advanced_search.availability_types.each do |avail_type|
        %div
          = check_box_tag "search[availability_types][kind][]", avail_type.id, checked = avail_type.checked, :class => 'checkbox'
          = avail_type.kind


      %br
      = submit_tag "Search", :class => 'btn'