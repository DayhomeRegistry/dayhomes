<% if @event.errors.any? %>
  // Create a list of errors
  var errors = $('<ul />');

  <% @event.errors.full_messages.each do |error| %>
    errors.append('<li><%= escape_javascript(error) %></li>');
  <% end %>

  // Display errors before the form
  $('<div />').addClass('errors').html(errors).prependTo("#error_explanation");

<% else %>

  $.modal.close();
  // clear ou the form
  $('#new_event').each (function(){
      this.reset();
  });
  $('#calendar').fullCalendar('refetchEvents');

  // error clean up
  $('#error_explanation').removeClass("errors").html('');
<% end %>