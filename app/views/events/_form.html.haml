= form_for(@event, :validate => true, :remote => true) do |f|
  #error_explanation

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :starts_at
    = f.text_field :starts_at, :class => 'datetimepicker'
  .field
    = f.label :ends_at
    = f.text_field :ends_at, :class => 'datetimepicker'
  .field
    = f.label :all_day
    = f.check_box :all_day
  .field
    = f.label :description
    = f.text_field :description
  #ajax_submit.actions
    = f.submit
