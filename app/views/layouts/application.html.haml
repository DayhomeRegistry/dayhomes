!!! Strict
%html{:lang =>"en"}
  %head
    %title Day Home Registry
    = stylesheet_link_tag :application, :media => :all
    = javascript_include_tag :application
    = csrf_meta_tags
    = yield :header_scripts
    %link{:href => "assets/icons/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
  %body
    = render 'layouts/header'
    #mainContent
      .wrapper
        .row
          .content.span12
            .adminPanel
              %ul.right
                - if current_user
                  %li.first
                    = current_user.full_name
                    = "-"
                  %li= link_to "Your Account", user_path(current_user)
                  
                  - if current_user.admin?
                    %li= link_to "Admin", admin_root_path
                    
                  - if current_user.day_home_owner?
                    %li= link_to "My Day Homes", day_homes_path
                    
                  %li= link_to 'Logout', logout_path
                - else
                  = fb_connect_button
                  %li= link_to 'Login', login_path
                  
                  %li= link_to 'Sign Up', new_user_path
            = render 'layouts/flash_msgs'
            = yield
          #contentShadow
    = render 'layouts/footer'
