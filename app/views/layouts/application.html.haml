!!! Strict
%html{:lang =>"en"}
  %head
    %title Dayhomes
    = stylesheet_link_tag :application, :media => :all
    = javascript_include_tag :application
    = csrf_meta_tags
    = yield :header_scripts
  %body
    = render 'layouts/header'
    = render 'layouts/flash_msgs'
    
    #mainContent
      .wrapper
        .row
          .content.span12
            = yield
          #contentShadow
    = render 'layouts/footer'
