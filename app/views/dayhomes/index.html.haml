-content_for :title do
  %title Dayhomes - Dayhome Registry
.row.background
  .page-container.row-space-top-4
    .row
      .col-md-3
        %ul.sidenav.list-unstyled
          %li
            %a.sidenav-item{"aria-selected" => "true", :href => "dayhomes"} Manage Dayhomes
          %li
            %a.sidenav-item{"aria-selected" => "false", :href => "dayhomes/parents", :disabled=>"disabled"} Your Parents
      .col-md-9
        .panel
          .panel-header
            .row
              .col-md-6
                %input
              .col-md-6.text-right
                %a{href:"dayhomes/new"}
                  %button.btn.btn-primary.large.btn-large.padded-btn-block{type:"button"}
                    %span.glyphicon.glyphicon-plus
                    Add a dayhome
          .panel-body
            .row
              .col-md-12
                - if @dayhomes.blank?
                  %p
                    No dayhomes have been assigned to you or, at least, none that match that criteria!
                - else
                  %table.table-striped.table{:cellpadding => '5'}
                    %thead
                      %tr
                        %th
                          = sortable "location_id","Locale"
                        %th
                          = sortable "name","Name"
                        %th
                          Address
                        %th
                          Photos
                        %th
                          Featured?
                        %th
                          Actions
                    %tbody
                      - @dayhomes.each do |day_home|
                        %tr
                          %td
                            = day_home.location.name
                          %td
                            = link_to day_home.name, day_home
                          %td
                            = day_home.address
                          %td
                            - if day_home.photos.blank?
                              None
                            - else
                              - day_home.photos.each do |photo|
                                = link_to image_tag(photo.photo_url(:thumb), :style => 'max-height: 25px; margin: 0 5px 5px 0;', :class => :left), photo.photo_url, :alt => photo.caption, :class => 'photo_preview', :title => photo.caption
                          %td
                            = yes_no(day_home.featured?)
                          %td
                            = link_to 'Edit', [:edit, day_home]
                            |
                            = link_to 'Delete', day_home, :method => :delete, :confirm => "Are you sure?"    
                            |
                            = link_to('Calendar', "/day_homes/#{day_home.id}/calendar")
          .panel-footer
            .row
              .col-md-12.text-center
                = paginate @dayhomes, :outer_window => 5, :window => 5                      